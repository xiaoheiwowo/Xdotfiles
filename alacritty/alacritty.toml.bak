theme = "Tokyonight_Storm"

[env]
TERM = "alacritty"
opacity = "0.1"

[font]
size = 14

  [font.normal]
  family = "FiraCode Nerd Font Mono"

  [font.bold]
  family = "FiraCode Nerd Font Mono"
  style = "Bold"

[cursor.style]
blinking = "on"

[[key_bindings]]
key = "Paste"
action = "Paste"

[[key_bindings]]
key = "Copy"
action = "Copy"

[[key_bindings]]
key = "V"
mods = "Shift|Control"
mode = "~Search"
action = "ToggleViMode"

[[key_bindings]]
key = "C"
mods = "Control"
mode = "Vi|~Search"
action = "ToggleViMode"

[[key_bindings]]
key = "Y"
mode = "Vi|~Search"
action = "Copy"

[[key_bindings]]
key = "V"
mode = "Vi|~Search"
action = "ToggleNormalSelection"

[[key_bindings]]
key = "V"
mods = "Shift"
mode = "Vi|~Search"
action = "ToggleLineSelection"

[[key_bindings]]
key = "V"
mods = "Control"
mode = "Vi|~Search"
action = "ToggleBlockSelection"

[[key_bindings]]
key = "V"
mods = "Alt"
mode = "Vi|~Search"
action = "ToggleSemanticSelection"

[[key_bindings]]
key = "V"
mods = "Command"
action = "Paste"

[[key_bindings]]
key = "C"
mods = "Command"
action = "Copy"

[[key_bindings]]
key = "W"
mods = "Command"
action = "Quit"

[[key_bindings]]
key = "T"
mods = "Command"
action = "CreateNewWindow"

[[key_bindings]]
key = "F"
mods = "Command|Control"
action = "ToggleFullscreen"

[[key_bindings]]
key = "LBracket"
mods = "Command"
chars = "\u0002;"

[[key_bindings]]
key = "D"
mods = "Command"
chars = "\u0002_"

[[key_bindings]]
key = "D"
mods = "Command|Shift"
chars = "\u0002-"

[[key_bindings]]
key = "N"
mods = "Command"
chars = "\u0002c"

[[key_bindings]]
key = "Key1"
mods = "Command"
chars = "\u00021"

[[key_bindings]]
key = "Key2"
mods = "Command"
chars = "\u00022"

[[key_bindings]]
key = "Key3"
mods = "Command"
chars = "\u00023"

[colors]
name = "TokyoNight Storm"
author = "Folke"

  [colors.primary]
  background = "0x24283b"
  foreground = "0xc0caf5"

  [colors.normal]
  black = "0x1D202F"
  red = "0xf7768e"
  green = "0x9ece6a"
  yellow = "0xe0af68"
  blue = "0x7aa2f7"
  magenta = "0xbb9af7"
  cyan = "0x7dcfff"
  white = "0xa9b1d6"

  [colors.bright]
  black = "0x414868"
  red = "0xf7768e"
  green = "0x9ece6a"
  yellow = "0xe0af68"
  blue = "0x7aa2f7"
  magenta = "0xbb9af7"
  cyan = "0x7dcfff"
  white = "0xc0caf5"

  [[colors.indexed_colors]]
  index = 16
  color = "0xff9e64"

  [[colors.indexed_colors]]
  index = 17
  color = "0xdb4b4b"
